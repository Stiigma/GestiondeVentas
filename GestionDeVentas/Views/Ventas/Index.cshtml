@{
    ViewData["Title"] = "Ventas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gestión de Ventas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">

    <!-- NAV BAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container justify-content-center">
            <div class="navbar-nav gap-4">
                <a class="nav-link fw-semibold text-dark" href="/">🏠 Home</a>
                <a class="nav-link fw-semibold text-dark" href="/Ingresos">Ingresos</a>
                <a class="nav-link fw-semibold text-primary" href="/Ventas">Ventas</a>
            </div>
        </div>
    </nav>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="mb-0 text-success">Listado de Ventas</h1>
            <a href="/Ventas/Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nueva Venta
            </a>
        </div>

        <div class="mb-3">
            <input type="text" id="busquedaInput" class="form-control" placeholder="🔍 Buscar..." onkeyup="filtrarTabla()" />
        </div>

        <div id="ventas-container" class="table-responsive">
            <!-- Tabla será insertada por JS -->
        </div>

        <div class="table-responsive mt-4" id="tablaDetallesWrapper" style="display: none;">
            <table class="table table-bordered" id="tablaDetalles">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

    <!-- Modal Confirmación -->
    <div class="modal fade" id="modalConfirmarEstado" tabindex="-1" aria-labelledby="modalEstadoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalEstadoLabel">Confirmar acción</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body" id="modalEstadoMensaje">
                    <!-- Se llena con JS -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnConfirmarCambioEstado" class="btn btn-primary">Sí, confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para consumir API -->
    <script src=@Url.Content("~/js/ventas.js")></script>
</body>
</html>
