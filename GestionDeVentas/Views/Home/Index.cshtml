@{
    ViewData["Title"] = "Inicio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Gestión de Ventas</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <!-- NAV BAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container justify-content-center">
            <div class="navbar-nav gap-4">
                <a class="nav-link fw-semibold text-primary" href="/">🏠 Home</a>
                <a class="nav-link fw-semibold text-dark" href="/Ingresos">Ingresos</a>
                <a class="nav-link fw-semibold text-dark" href="#">Ventas</a>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main class="d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="text-center mt-5">
            <h1 class="display-4 fw-bold text-success">¡Bienvenido a la sección de Ingresos!</h1>
            <p class="lead text-muted">Consulta, agrega y administra tus ingresos fácilmente.</p>
        </div>
    </main>

    <!-- Bootstrap JS (opcional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
